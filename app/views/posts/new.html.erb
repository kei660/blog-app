<div class="post-form-container">
  <h1 class="form-title">新しい投稿を作成する</h1>

  <%= form_with(model: @post, local: true, html: { class: "post-form" }) do |form| %>
    <div class="form-group">
      <%= form.label :title, "タイトル", class: "form-label" %>
      <%= form.text_field :title, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= form.label :content, "内容", class: "form-label" %>
      <%= form.text_area :content, class: "form-textarea" %>
    </div>

    <div class="form-actions">
      <%= form.submit "投稿する", class: "button button-primary" %>
    </div>
  <% end %>
</div>